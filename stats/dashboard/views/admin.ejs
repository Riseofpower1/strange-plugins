<section class="mb-6">
  <div class="border-border bg-bg-panel rounded-lg border p-4 shadow-sm sm:p-6 2xl:col-span-2">
    <!-- START: Card Header -->
    <div class="border-border mb-4 flex items-center justify-between border-b pb-4">
      <h3 class="text-text text-lg font-semibold"><%= tr("stats:CONFIG") %></h3>
    </div>
    <!-- END: Card Header -->

    <form
      x-data="{
      formData: {
        message: '<%= config.LEVEL_UP_MESSAGE %>',
        api_url: '<%= config.STRANGE_API_URL %>',
        api_key: '<%= config.STRANGE_API_KEY %>'
      },
      saving: false,
      async submitForm() {
        this.saving = true;
        try {
          const response = await fetch(window.location.href, {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(this.formData)
          });
          if (!response.ok) throw new Error('Failed to update config');
          Alpine.store('toast').show('<%=tr(`CONFIG_SAVE`)%>', 'success');
        } catch (error) {
          Alpine.store('toast').show('<%=tr(`CONFIG_SAVE_ERROR`)%>', 'error');
        } finally {
          this.saving = false;
        }
      }
    }"
      @submit.prevent="submitForm">
      <!-- START: Card Body -->
      <div class="mb-3">
        <div class="grid gap-4 md:grid-cols-1 xl:grid-cols-1">
          <!-- START: Column 1 -->
          <div>
            <div class="mb-2">
              <label for="message" class="text-text text-sm font-semibold"><%= tr("stats:LVL_MSG_TITLE") %></label>
              <div class="text-text-muted text-sm font-normal"><%= tr("stats:LVL_MSG_DESC") %></div>
            </div>
            <input
              type="text"
              x-model="formData.message"
              id="message"
              class="focus:border-primary focus:ring-primary border-border bg-bg-interactive text-text block w-full rounded-lg border p-2.5 shadow-sm sm:text-sm" />
          </div>
        </div>
      </div>

      <div class="mb-3">
        <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-2">
          <!-- START: Column 1 -->
          <div>
            <div class="mb-2">
              <label for="api_url" class="text-text text-sm font-semibold"><%= tr("stats:API_URL") %></label>
              <div class="text-text-muted text-sm font-normal"><%= tr("stats:API_URL_DESC") %></div>
            </div>
            <input
              type="url"
              x-model="formData.api_url"
              id="api_url"
              class="focus:border-primary focus:ring-primary border-border bg-bg-interactive text-text block w-full rounded-lg border p-2.5 shadow-sm sm:text-sm" />
          </div>

          <!-- START: Column 2 -->
          <div>
            <div class="mb-2">
              <label for="api_key" class="text-text text-sm font-semibold"><%= tr("stats:API_KEY") %></label>
              <div class="text-text-muted text-sm font-normal"><%= tr("stats:API_KEY_DESC") %></div>
            </div>
            <input
              type="text"
              x-model="formData.api_key"
              id="api_key"
              class="focus:border-primary focus:ring-primary border-border bg-bg-interactive text-text block w-full rounded-lg border p-2.5 shadow-sm sm:text-sm"
              required />
          </div>
        </div>
      </div>

      <!-- END: Card Body -->

      <!-- START: Card Footer -->
      <div class="border-border mt-4 flex items-center justify-between border-t pt-3 sm:pt-6">
        <div></div>
        <div class="flex-shrink-0">
          <button
            type="submit"
            :disabled="saving"
            :class="{'opacity-50': saving}"
            class="bg-primary hover:bg-primary-dark focus:ring-primary inline-flex items-center rounded-lg px-3 py-2 text-center text-sm font-medium text-white focus:outline-none focus:ring-4">
            <span x-show="!saving"><%= tr('BTN_SAVE') %></span>
            <span x-show="saving"><%= tr('BTN_SAVING') %></span>
          </button>
        </div>
      </div>
      <!-- END: Card Footer -->
    </form>
  </div>
</section>
