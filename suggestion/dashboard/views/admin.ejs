<section class="mb-6 px-4">
  <div
    class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm dark:border-gray-700 dark:bg-gray-800 sm:p-6 2xl:col-span-2">
    <!-- START: Card Header -->
    <div class="mb-4 flex items-center justify-between border-b border-gray-200 pb-4 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white"><%= tr("suggestion:ADMIN_DEFAULTS") %></h3>
    </div>
    <!-- END: Card Header -->

    <form
      x-data="{
      formData: {
        upvote_emoji: '<%= config.UPVOTE_EMOJI %>',
        downvote_emoji: '<%= config.DOWNVOTE_EMOJI %>',
        default_embed: '<%= config.DEFAULT_EMBED %>',
        approved_embed: '<%= config.APPROVED_EMBED %>',
        rejected_embed: '<%= config.DENIED_EMBED %>'
      },
      saving: false,
      async submitForm(e) {
        e.preventDefault();
        this.saving = true;
        try {
          const response = await fetch(window.location.href, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(this.formData)
          });
          if (!response.ok) throw new Error('Failed to save');
          Alpine.store('toast').show('<%=tr(`CONFIG_SAVE`)%>', 'success');
        } catch (err) {
          Alpine.store('toast').show('<%=tr(`CONFIG_SAVE_ERROR`)%>', 'error');
        } finally {
          this.saving = false;
        }
      }
    }"
      @submit.prevent="submitForm">
      <!-- START: Card Body -->

      <!-- START: ROW 1 -->
      <div class="mb-3">
        <div class="grid gap-4 md:grid-cols-3 xl:grid-cols-3">
          <!-- START: Column 1 (Upvote Emoji) -->
          <div>
            <div class="mb-2">
              <label for="upvote_emoji" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("suggestion:UPVOTE_TITLE") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("suggestion:UPVOTE_DESC") %>
              </div>
            </div>
            <input
              type="text"
              x-model="formData.upvote_emoji"
              name="upvote_emoji"
              maxlength="2"
              id="upvote_emoji"
              class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              required />
          </div>
          <!-- END: Column 1 -->

          <!-- START: Column 2 (Downvote Emoji) -->
          <div>
            <div class="mb-2">
              <label for="downvote_emoji" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("suggestion:DOWNVOTE_TITLE") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("suggestion:DOWNVOTE_DESC") %>
              </div>
            </div>
            <input
              type="text"
              x-model="formData.downvote_emoji"
              name="downvote_emoji"
              maxlength="2"
              id="downvote_emoji"
              class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              required />
          </div>
          <!-- END: Column 2 -->
        </div>
      </div>
      <!-- END: ROW 1 -->

      <!-- START: ROW 2 -->
      <div class="mb-3">
        <div class="grid gap-4 md:grid-cols-3 xl:grid-cols-3">
          <!-- START: Column 1 -->
          <div>
            <div class="mb-2">
              <label for="default_embed" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("suggestion:DEFAULT_EMBED_TITLE") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("suggestion:DEFAULT_EMBED_DESC") %>
              </div>
            </div>
            <input
              type="color"
              x-model="formData.default_embed"
              name="default_embed"
              id="default_embed"
              class="block h-10 w-full rounded-lg border border-gray-300 p-0.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              required />
          </div>

          <!-- START: Column 2 -->
          <div>
            <div class="mb-2">
              <label for="approved_embed" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("suggestion:APPROVED_EMBED_TITLE") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("suggestion:APPROVED_EMBED_DESC") %>
              </div>
            </div>
            <input
              type="color"
              x-model="formData.approved_embed"
              name="approved_embed"
              id="approved_embed"
              class="block h-10 w-full rounded-lg border border-gray-300 p-0.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              required />
          </div>

          <!-- START: Column 3 -->
          <div>
            <div class="mb-2">
              <label for="rejected_embed" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("suggestion:REJECTED_EMBED_TITLE") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("suggestion:REJECTED_EMBED_DESC") %>
              </div>
            </div>
            <input
              type="color"
              x-model="formData.rejected_embed"
              name="rejected_embed"
              id="rejected_embed"
              class="block h-10 w-full rounded-lg border border-gray-300 p-0.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              required />
          </div>
        </div>
      </div>
      <!-- END: ROW 2 -->
      <!-- END: Card Body -->

      <!-- START: Card Footer -->
      <div class="mt-4 flex items-center justify-between border-t border-gray-200 pt-3 dark:border-gray-700 sm:pt-6">
        <div></div>
        <div class="flex-shrink-0">
          <button
            type="submit"
            :disabled="saving"
            :class="{'opacity-50': saving}"
            class="inline-flex items-center rounded-lg bg-primary-700 px-3 py-2 text-center text-sm font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
            <span x-show="!saving"><%= tr('BTN_SAVE') %></span>
            <span x-show="saving"><%= tr('BTN_SAVING') %></span>
          </button>
        </div>
      </div>
      <!-- END: Card Footer -->
    </form>
  </div>
</section>
